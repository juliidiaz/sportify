<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>

    <!-- ESTILOS -->

    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/img/logo-general.png">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    

    <!-- BOOTSTRAP Y SLIDER -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/swiffy-slider@1.6.0/dist/css/swiffy-slider.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body>

    <!--HEADER-->
    <%- include ("./partials/navbar") %>

    <main>
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/img/imagenes-home/2.png" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/img/imagenes-home/1.png" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!--slider de productos varios-->
        <h1 class="titulo-productos">→ Novedades</h1>
        <section style="display: flex; justify-content: center; align-items: center;"> 
            <div style="width: 90%;">     
                <div class="swiffy-slider slider-item-show4 slider-item-reveal slider-nav-dark slider-nav-outside-expand">
                    <ul class="slider-container py-4" id="slider2">
                <% data.map((results) => { %>       
                    <li>
                    <a href="product/detail/<%= results.id %>" style="text-decoration: none; text-align: start;">
                            <div class="card shadow h-100">
                                <div class="ratio ratio-1x1">
                                <img src="<%= results.image %>" class="card-img-top" loading="lazy" alt="...">
                            </div>
                            <div class="card-body d-flex flex-column flex-md-row">
                                <div>
                                    <div class="title-interes text-interes"><%= results.title %></div>
                                    <div class="text-interes">$<%= results.price %></div>
                                </div>
                                
                            </div>
                        </div>
                    </a>
                </li>                
                <% }) %>   
            </ul>
            <button type="button" class="slider-nav" aria-label="Ir al anterior"></button>
            <button type="button" class="slider-nav slider-nav-next" aria-label="ir al siguiente"></button>
                </div>
            </div>  
         </section>

        <h1 class="titulo-productos">→ Popular</h1>
        <section style="display: flex; justify-content: center; align-items: center;"> 
            <div style="width: 90%;">     
                <div class="swiffy-slider slider-item-show4 slider-item-reveal slider-nav-dark slider-nav-outside-expand">
                    <ul class="slider-container py-4" id="slider2">
                        <% const shuffledPopularProducts = data.slice().sort(() => Math.random() - 0.5).slice(0, 10);  %> 
                        <% shuffledPopularProducts.map((popularProduct) => { %>       
                        <li>
                            <a href="product/detail/<%= popularProduct.id %>" style="text-decoration: none; text-align: start;">
                                <div class="card shadow h-100">
                                    <div class="ratio ratio-1x1">
                                        <img src="<%= popularProduct.image %>" class="card-img-top" loading="lazy" alt="...">
                                    </div>
                                    <div class="card-body d-flex flex-column flex-md-row">
                                        <div>
                                            <div class="title-interes text-interes"><%= popularProduct.title %></div>
                                            <div class="text-interes">$<%= popularProduct.price %></div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>                
                        <% }) %>   
                    </ul>
                    <button type="button" class="slider-nav" aria-label="Ir al anterior"></button>
                    <button type="button" class="slider-nav slider-nav-next" aria-label="ir al siguiente"></button>
                </div>
            </div>  
        </section>


        <!--BANNER -->
        
        <div class="banner">
            <img src="/img/imagenes-home/3.png" alt="">
        </div>
        
        <!--PODRIA INTERESARTE-->

        <h1 class="titulo-productos">→ Podría interesarte</h1>
        <div class="contain-interes">
            <div class="row row-interes">
            <div class="col-12 col-sm-4 img-interes" style="background-image: url(/img/imagenes-home/prop1.jpg);">
                <a href="/product/category/genero/Hombre" style="text-decoration: none; margin: 30px;">
                    <div class="title-interes text-interes">HOMBRE</div>
                    <div class="text-interes">Ver categoría</div>
                </a>
            </div>
            <div class="col-12 col-sm-4 img-interes" style="background-image: url(/img/imagenes-home/prop2.jpg);">
                <a href="/product/category/genero/Mujer" style="text-decoration: none; margin: 30px;">
                    <div class="title-interes text-interes">MUJER</div>
                    <div class="text-interes">Ver categoría</div>
                </a>
            </div>
            <div class="col-12 col-sm-4 img-interes" style="background-image: url(/img/imagenes-home/prop3.jpg);">
                <a href="/product/category/Calzado" style="text-decoration: none; margin: 30px;">
                    <div class="title-interes text-interes">CALZADO</div>
                    <div class="text-interes">Ver categoría</div>
                </a>
            </div>
            </div>
        </div>
    </main>
    
    <!-- FOOTER -->
    <%- include ("./partials/footer") %>

</body>
</html>